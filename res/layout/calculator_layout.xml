<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp" >

        <EditText
            android:id="@+id/txtInput"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="40sp"
            android:background="@drawable/kq"
            android:editable="false"
            android:gravity="right"
            android:inputType="none"
            android:paddingRight="5sp"
            android:paddingTop="5sp"
            android:text="0"
            android:cursorVisible="false"
            android:textColor="#05c2f9"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/txt1234"
            android:layout_width="match_parent"
            android:layout_height="10dp" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <Button
                android:id="@+id/btnClear"
                android:layout_width="145dp"
                android:layout_height="65dp"
                android:layout_marginBottom="2sp"
                android:layout_marginLeft="3sp"
                android:layout_marginRight="2sp"
                android:background="@drawable/effect_pheptoan"
                android:text="C"
                android:textColor="#ffffff"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btnDel"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginBottom="1sp"
                android:layout_marginLeft="2sp"
                android:layout_marginRight="2sp"
                android:background="@drawable/btndel"
                android:textColor="#ffffff"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btnDiv"
                android:layout_width="73dp"
                android:layout_height="65dp"
                android:layout_marginBottom="1sp"
                android:layout_marginLeft="2sp"
                android:layout_marginRight="3sp"
                android:background="@drawable/effect_pheptoan"
                android:text="รท"
                android:textColor="#ffffff"
                android:textSize="25dp" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <Button
                android:id="@+id/btn7"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginBottom="2sp"
                android:layout_marginLeft="3sp"
                android:layout_marginRight="2sp"
                android:background="@drawable/effect"
                android:text="7"
                android:textColor="#ffffff"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginBottom="2sp"
                android:layout_marginLeft="2sp"
                android:layout_marginRight="2sp"
                android:background="@drawable/effect"
                android:text="8"
                android:textColor="#ffffff"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginBottom="2sp"
                android:layout_marginLeft="2sp"
                android:layout_marginRight="2sp"
                android:background="@drawable/effect"
                android:text="9"
                android:textColor="#ffffff"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btnMul"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginBottom="2sp"
                android:layout_marginLeft="2sp"
                android:layout_marginRight="3sp"
                android:background="@drawable/effect_pheptoan"
                android:text="x"
                android:textColor="#ffffff"
                android:textSize="25dp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <Button
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginBottom="2sp"
                android:layout_marginLeft="3sp"
                android:layout_marginRight="2sp"
                android:background="@drawable/effect"
                android:text="4"
                android:textColor="#ffffff"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginBottom="2sp"
                android:layout_marginLeft="2sp"
                android:layout_marginRight="2sp"
                android:background="@drawable/effect"
                android:text="5"
                android:textColor="#ffffff"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginBottom="2sp"
                android:layout_marginLeft="2sp"
                android:layout_marginRight="2sp"
                android:background="@drawable/effect"
                android:text="6"
                android:textColor="#ffffff"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btnSub"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginBottom="2sp"
                android:layout_marginLeft="2sp"
                android:layout_marginRight="2sp"
                android:background="@drawable/effect_pheptoan"
                android:text="-"
                android:textColor="#ffffff"
                android:textSize="25dp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginBottom="2sp"
                android:layout_marginLeft="3sp"
                android:layout_marginRight="2sp"
                android:background="@drawable/effect"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginBottom="2sp"
                android:layout_marginLeft="2sp"
                android:layout_marginRight="2sp"
                android:background="@drawable/effect"
                android:text="2"
                android:textColor="#ffffff"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginBottom="2sp"
                android:layout_marginLeft="2sp"
                android:layout_marginRight="2sp"
                android:background="@drawable/effect"
                android:text="3"
                android:textColor="#ffffff"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="75dp"
                android:layout_height="70dp"
                android:layout_marginBottom="2sp"
                android:layout_marginLeft="2sp"
                android:layout_marginRight="2sp"
                android:background="@drawable/effect_pheptoan"
                android:text="+"
                android:textColor="#ffffff"
                android:textSize="25dp" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <Button
                android:id="@+id/btn0"
                android:layout_width="145dp"
                android:layout_height="65dp"
                android:layout_marginBottom="2sp"
                android:layout_marginLeft="3sp"
                android:layout_marginRight="2sp"
                android:background="@drawable/effect"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btnPoin"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginBottom="2sp"
                android:layout_marginLeft="2sp"
                android:layout_marginRight="2sp"
                android:background="@drawable/effect"
                android:text="."
                android:textColor="#ffffff"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btnEqual"
                android:layout_width="75dp"
                android:layout_height="65dp"
                android:layout_marginBottom="2sp"
                android:layout_marginLeft="2sp"
                android:layout_marginRight="3sp"
                android:background="@drawable/effect_bang"
                android:text="="
                android:textColor="#ffffff"
                android:textSize="25dp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <Button
                android:id="@+id/btnDone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Done" />
        </TableRow>
    </TableLayout>

</LinearLayout>