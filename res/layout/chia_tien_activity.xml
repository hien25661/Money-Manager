<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     android:weightSum="12" 
     
    >
   <TableLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/GreenChuDe"
        android:gravity="center"
         android:layout_weight="11"
        android:orientation="vertical" >

        <TableRow
            android:id="@+id/tableRow9"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="5" >

            <Button
                android:id="@+id/Back_chiatien"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/docam"
                android:gravity="center"
                android:padding="1dp"
                android:text="@string/Back"
                android:textColor="@color/mauTrang_Chu" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:gravity="center"
                android:text="Split the money"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/mauTrang_Chu"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="fill_parent"
       android:orientation="vertical"  android:layout_weight="1" 
       android:gravity="center">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:weightSum="3" >

           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:paddingTop="5dp"
               android:text="Amount of money"
               android:textColor="@color/text_color_add"
               android:textSize="15sp" />

           <EditText
               android:id="@+id/edSoTienChia"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:ems="10"
               android:inputType="number"
               android:numeric="integer"
               android:textSize="20dp" >

               <requestFocus />
           </EditText>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="2dp"
               android:layout_weight="1"
               android:gravity="center_vertical"
               android:text=" x1 USD"
               android:textColor="@color/donvi_tien"
               android:textSize="16dp" />
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginBottom="15dp"
           android:layout_marginTop="15dp"
           android:orientation="horizontal"
           android:weightSum="3" >

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:paddingTop="5dp"
               android:text="Percentage tip"
               android:textColor="@color/text_color_add"
               android:textSize="15sp" />

           <EditText
               android:id="@+id/edTyLeTip"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:ems="10"
               android:inputType="number"
               android:lines="1"
               android:numeric="integer"
               android:text="0"
               android:textSize="20dp" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:orientation="horizontal"
               android:weightSum="1" >

               <Button
                   android:id="@+id/tile_cong"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="top"
                   android:layout_weight="0.5"
                   android:gravity="center"
                   android:text="+"
                   android:textColor="@color/text_color_add"
                   android:textSize="20dp"
                   android:textStyle="bold" />

               <Button
                   android:id="@+id/tile_tru"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="top"
                   android:layout_weight="0.5"
                   android:gravity="center"
                   android:text="-"
                   android:textColor="@color/text_color_add"
                   android:textSize="20dp"
                   android:textStyle="bold" />
           </LinearLayout>
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:weightSum="3" >

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:paddingTop="5dp"
               android:text="Amount of people"
               android:textColor="@color/text_color_add"
               android:textSize="15sp" />

           <EditText
               android:id="@+id/edSoNguoi"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:ems="10"
               android:inputType="number"
               android:numeric="integer"
               android:text="1"
               android:textSize="20dp" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:orientation="horizontal"
               android:weightSum="1" >

               <Button
                   android:id="@+id/songuoi_cong"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="top"
                   android:layout_weight="0.5"
                   android:gravity="center"
                   android:text="+"
                   android:textColor="@color/text_color_add"
                   android:textSize="20dp"
                   android:textStyle="bold" />

               <Button
                   android:id="@+id/songuoi_tru"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="top"
                   android:layout_weight="0.5"
                   android:gravity="center"
                   android:text="-"
                   android:textColor="@color/text_color_add"
                   android:textSize="20dp"
                   android:textStyle="bold" />
           </LinearLayout>
       </LinearLayout>

       <Button
           android:id="@+id/btnChiaTien"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="15dp"
           android:gravity="center"
           android:paddingBottom="5dp"
           android:paddingTop="5dp"
           android:text="Calculate"
           android:textSize="20dp"
           android:textStyle="bold" />

   </LinearLayout>
</LinearLayout>